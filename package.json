{
  "name": "backend-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:generate": "node scripts/tests/generate.mjs",
    "db-schema:update": "npx mikro-orm schema:update --run --config ./mikro-orm.config.ts",
    "db-seed:create": "npx mikro-orm seeder:create",
    "db-seed:run": "npx mikro-orm seeder:run",
    "db-migration:create": "npx mikro-orm migration:create",
    "db-migration:up": "npx mikro-orm migration:up",
    "db-migration:down": "npx mikro-orm migration:down",
    "api-doc:generate": "npx @redocly/cli build-docs swagger-spec.json  -o public/api-docs/index.html",
    "api-client:generate": "npx @openapitools/openapi-generator-cli generate -i swagger-spec.json -g typescript-axios -o ./frontend/src/client"
  },
  "dependencies": {
    "@mikro-orm/cli": "6.0.2",
    "@mikro-orm/core": "6.0.2",
    "@mikro-orm/migrations": "6.0.2",
    "@mikro-orm/mysql": "6.0.2",
    "@mikro-orm/nestjs": "^5.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/swagger": "^7.1.14",
    "argon2": "^0.31.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connect-redis": "^7.1.0",
    "express-session": "^1.17.3",
    "mustache": "^4.2.0",
    "nestjs-pino": "^3.5.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pino": "^8.16.1",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.2.3",
    "randomstring": "^1.3.0",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "twilio": "^4.22.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.22",
    "@faker-js/faker": "^8.2.0",
    "@mikro-orm/seeder": "6.0.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-local": "^1.0.38",
    "@types/randomstring": "^1.1.11",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dot-env": "^0.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "yargs": "^17.7.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  }
}
